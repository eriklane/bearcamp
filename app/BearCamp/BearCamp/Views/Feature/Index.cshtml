@model IEnumerable<BearEF.Feature>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            FeatureName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FeatureName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FeatureID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FeatureID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FeatureID })
        </td>
    </tr>
}

</table>
