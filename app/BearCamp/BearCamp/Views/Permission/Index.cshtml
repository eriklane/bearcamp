@model IEnumerable<BearEF.Permission>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            User
        </th>
        <th>
            Feature
        </th>
        <th>
            PermissionSort
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Pswd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Feature.FeatureName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PermissionSort)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PermissionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PermissionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PermissionID })
        </td>
    </tr>
}

</table>
